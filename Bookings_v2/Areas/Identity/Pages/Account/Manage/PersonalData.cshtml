@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<div class="row">
    <div class="col-md-6">
        <h3 class="SubHeadingSettings">@ViewData["Title"]</h3>
        <p class="ChangeFont">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <pclass="ChangeFont">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="ManageAccountButton btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="ManageAccountButtonDelete DeletePersonalData" class="btn btn-danger">Delete</a>
        </p>
    </div>
</div>

<style>
    .row {
        background: none;
        align-content: center;
    }

    .col-md-6 {
        background: none;
        position: relative;
        align-self: center;
        left: -65%;
        top: 0%;
        transform: translate(65%, -0%);
        font-family: 'Montserrat';
    }

    .ChangeFont{
        font-family: 'Montserrat';
    }

    .SubHeadingSettings {
        font-family: 'Montserrat';
        font-size: 20px;
        font-weight: 400;
        letter-spacing: 0.05em;
        text-align: left;
        position: relative;
        margin-bottom: 2%;
    }

    .inputboxStyling {
        position: relative;
        color: #000000;
        font-size: 1.2vmax;
        font-family: 'Montserrat';
        border: none;
        border-radius: 0.5vmax;
        opacity: 0.8;
        margin-bottom: 10px;
        background: rgba(162, 162, 162, 0.2) !important;
    }

    .inputLabel {
        font-family: 'Montserrat';
    }

    .ManageAccountButton {
        position: relative;
        background: #00547D;
        border: 0.2px solid #00547D;
        border-radius: 0.5vmax;
        color: white;
        font-family: 'Montserrat';
        font-weight: 500;
        margin-bottom: 10px;
        margin-top: 10px;
    }

        .ManageAccountButton:hover {
            box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 10px 0 rgba(0, 0, 0, 0.19);
            background: #00537d;
            color: black;
        }
    .ManageAccountButtonDelete{
        position: relative;
        background: red;
        border: 0.2px solid red;
        border-radius: 0.5vmax !important;
        color: white;
        font-family: 'Montserrat';
        font-weight: 500;
        margin-bottom: 10px;
        margin-top: 10px;
    }

</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
