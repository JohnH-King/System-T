        </svg>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <i class="fa fa-user-circle-o" aria-hidden="true" id="UserIcon"></i>
        <h1 class="PageHeading">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="SubHeading">Create a new account.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="inputboxStyling form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="inputboxStyling form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="inputboxStyling form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="LoginButton w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

<style>
    .row {
        background: none;
    }

    .col-md-4 {
        background: none;
        align-self: center;
        text-align: center;
        position: relative;
        left: 50%;
        top: 0%;
        transform: translate(-50%, -0%);
    }

    #UserIcon {
        z-index: 90;
        color: rgb(255, 255, 255);
        font-size: 8vmax;
        position: relative;
        left: 0%;
        top: 0%;
        transform: translate(-0%, -0%);
        opacity: 0.9;
    }

    .PageHeading {
        position: relative;
        left: 50%;
        top: 0%;
        transform: translate(-50%, -0%);
        color: rgb(255, 255, 255);
    }

    .SubHeading {
        position: relative;
        left: 50%;
        top: 0%;
        transform: translate(-50%, -0%);
        color: rgb(255, 255, 255);
        font-family: 'Montserrat';
        font-size: calc(0.5rem + .9vw);
        margin-bottom: 10px;
    }

    .inputboxStyling {
        position: relative;
        color: #000000;
        font-size: 1.2vmax;
        font-family: 'Montserrat';
        border: none;
        border-radius: 0.5vmax;
        box-shadow: 0 4px 8px 0 rgba(0, 36, 119, 0.192), 0 6px 20px 0 rgba(0, 36, 119, 0.115) inset;
        opacity: 0.8;
        margin-bottom: 10px;
    }

    .LoginButton {
        background: rgba(0, 36, 119, 0.718);
        border: 0.2px solid rgba(0, 36, 119, 0.581);
        border-radius: 0.5vmax;
        color: white;
        font-family: 'Montserrat';
        font-weight: 500;
        line-height: 40px;
    }

        .LoginButton:hover {
            box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 10px 0 rgba(0, 0, 0, 0.19);
            background: rgba(0, 36, 119, 0.56);
            color: rgba(255, 255, 255, 0.763);
        }

    /* Hide the second column */
    .col-md-6.col-md-offset-2 {
        display: none;
    }
</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
