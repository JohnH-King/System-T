@{
    string flightsStart = "";
    string flightsCost = "";
    int count = 0;

    foreach(Flight items in ViewBag.Flights)
    {
        if (count >= 1)
        {
            flightsStart += ";" + items.StartLocation;
            flightsCost += ";" + items.Cost;
        }
        else
        {
            flightsStart += items.StartLocation;
            flightsCost += items.Cost;
        }
        count++;
        @*Arr.(items.Cost);*@
}
}
@*@if{ }
<p>No Flights Exist for this account</p>
}*@
<p id="flightsStart">@flightsStart</p>
<p id="flightsCost">@flightsCost</p>
@*<p>No Flights Exist for this account</p>*@
<script>
    var flightsfrom = document.getElementById('flightsStart').innerHTML
    var flightscost = document.getElementById('flightsCost').innerHTML


    const arrflightsfrom = flightsfrom.toString().split(';');
    const arrflightscost = flightscost.toString().split(';');



    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: arrflightsfrom,
            datasets: [{
                label: 'Cost per trip location',
                data: arrflightscost,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>